<%- include("../partials/header") %>

<h1 class="title"><%= `Available Projects` %></h1>

<table
  id="tab"
  class="ui striped selectable celled compact table"
  style="width:100%"
>
  <thead>
    <tr>
      <th>N</th>
      <th>Name</th>
      <th>ID</th>
      <th>DATA</th>
      <th>OwnerID</th>
      <th>Information</th>
      <th>TimeCreated</th>
      <th>TimeModified</th>
      <th>Active</th>
      <th>DataSharingEnabled</th>
      <th>TenantName</th>
    </tr>
  </thead>
  <tbody>
    <% p = data["items"]; %>
    <% firstPageToken = data["firstPageToken"] %>
    <% nextPageToken = data["nextPageToken"] %>
    <% prevPageToken = data["prevPageToken"] %>
    <% if (firstPageToken) {%>
        <a href="/projects?pageToken=<%= firstPageToken %>" class="ui toggle compact blue button">FirstPage</a>
    <% } %>
    <% if (nextPageToken) {%>
        <a href="/projects?pageToken=<%= nextPageToken %>" class="ui toggle compact green button">NextPage</a>
    <% } %>
    <% if (prevPageToken) {%>
        <a href="/projects?pageToken=<%= prevPageToken %>" class="ui toggle compact orange button">PreviousPage</a>
    <% } %>
    <% for (let i = 0; i < p.length; i++) { %>
    <tr>
      <td><%= `${i + 1}.` %></td>
      <td><%= p[i].name %></td>
      <td><a href="/projects/<%= p[i].id %>"><%= p[i].id %></a></td>
      <td><a href="/projects/<%= p[i].id %>/data">DATA</a></td>
      <td><%= id2username(p[i].ownerId) %></td>
      <td><%= p[i].information %></td>
      <td><%= p[i].timeCreated %></td>
      <td><%= p[i].timeModified %></td>
      <td><%= p[i].active %></td>
      <td><%= p[i].dataSharingEnabled %></td>
      <td><%= p[i].tenantName %></td>
    </tr>
    <% } %>
  </tbody>
</table>

<script>
  $(document).ready(function() {
    $("#tab").DataTable({
      pageLength: 10,
      lengthMenu: [ [10, -1], [10, "All"] ],
      "dom": '<"top"flip>t<"bottom"flip>'
    });
  });
</script>

<pre>
<%- jsonSyntaxHighlight(JSON.stringify(data, null, 2)) %>
</pre>

